{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2016", "dom", "es5"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist.browser",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
